<h1><%= t('project.edit.title') %></h1>

<%= form_for @project, url: {action: "update"} do |f| %>

  <div class="row">

    <div class="col-md-2">
      <h2><%= t('project.show.project') %></h2>
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-2 offset-md-2">
      <h2><%= t('project.show.client.client') %>
    </div>

    <div class="col-md-2"></div>

  </div>
  <div class="row">

    <div class="col-md-1">
      <%= t('project.show.name') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :name %>
    </div>

    <div class="col-md-1 offset-md-1">
      <%= t('project.show.client.name') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :client_name %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-1">
      <%= t('project.show.identifier') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :identifier %>
    </div>

    <div class="col-md-1 offset-md-1">
      
    </div>
    <div class="col-md-3">
      
    </div>

  </div>
  <div class="row">

    <div class="col-md-1">
      <%= t('project.show.address') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :address %>
    </div>

    <div class="col-md-1 offset-md-1">
      <%= t('project.show.client.address') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :client_address %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-1">
      <%= t('project.show.npa') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :npa %>
    </div>

    <div class="col-md-1 offset-md-1">
      <%= t('project.show.client.npa') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :client_npa %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-1">
      <%= t('project.show.city') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :city %>
    </div>

    <div class="col-md-1 offset-md-1">
      <%= t('project.show.client.city') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :client_city %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-1">
      <%= t('project.show.country') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :country %>
    </div>

    <div class="col-md-1 offset-md-1">
      <%= t('project.show.client.country') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :client_country %>
    </div>

  </div>
  <br>
  <%= submit_tag t('project.edit.submit') %>
<% end %>

