
<%= form_with(model: @version, local: true) do |f| %>

  <div class="row">

    <div class="col-md-4 col-md-offset-1">
      <h1><%= t('version.new.title') %></h1>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('version.new.version_number') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :version_number, :tabindex => 1, class: "input-shorter" %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('version.new.date') %>
    </div>
    <div class="col-md-3">
      <%= f.date_field :date, :tabindex => 2, value: Date.today, class: "input-short" %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('version.new.author') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :author, :tabindex => 3, class: "input-shorter" %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('version.new.checker') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :checker, :tabindex => 4, class: "input-shorter" %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('version.new.comment') %>
    </div>
    <div class="col-md-3">
      <%= f.text_area :comment, :tabindex => 5 %>
    </div>

  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= f.submit t('user.submit'), :tabindex => 6 %>
      <%= link_to 'Back', versions_path, class: "btn" %>
    </div>
  </div>
<% end %>