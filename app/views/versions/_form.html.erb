<%= form_with(model: version, local: true) do |form| %>
  <% if version.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(version.errors.count, "error") %> prohibited this version from being saved:</h2>

      <ul>
      <% version.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :version_number %>
    <%= form.text_field :version_number, id: :version_version_number %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :version_date %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :version_author %>
  </div>

  <div class="field">
    <%= form.label :checker %>
    <%= form.text_field :checker, id: :version_checker %>
  </div>

  <div class="field">
    <%= form.label :crypted_id %>
    <%= form.text_field :crypted_id, id: :version_crypted_id %>
  </div>

  <div class="field">
    <%= form.label :current_version %>
    <%= form.check_box :current_version, id: :version_current_version %>
  </div>

  <div class="field">
    <%= form.label :comments %>
    <%= form.text_area :comments, id: :version_comments %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
