<%= form_with model: version, local: true do |f| %>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.form.version_number') %> *
    </div>
    <div class="col-md-2">
      <%= f.text_field :version_number, tabindex: 1, class: "input-shorter" %>
    </div>
    <div class="col-md-6 grey">
      <%= t('version.form.version_number_comment') %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.form.date') %>
    </div>
    <div class="col-md-4">
      <%= f.date_field :date, tabindex: 2, value: Date.today, class: "input-short" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.form.author') %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :author, tabindex: 3, class: "input-shorter" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.form.checker') %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :checker, tabindex: 4, class: "input-shorter" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.form.comment') %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :comments, tabindex: 5 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 middle-btn">
      <%= t('version.form.pdf_file') %> *
    </div>
    <div class="col-md-10">
      <%= f.file_field :pdf_file, accept:"application/pdf", tabindex: 6  %>
      <small class="grey"><%= version.pdf_file_name %></small>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 middle-btn">
      <%= t('version.form.dxf_file') %>
    </div>
    <div class="col-md-3">
      <%= f.file_field :dxf_file, tabindex: 7 %>
      <small class="grey"><%= version.dxf_file_name %></small>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <%= f.submit t('version.submit'), class: "btn", tabindex: 8 %>
      <%= link_to t('version.cancel'), versions_path, class: "btn" %>
    </div>
  </div>
  
<% end %>
