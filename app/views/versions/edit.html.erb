<h1><%= t('version.new.title') %></h1>

<%= form_with model: @version, method: :patch, local: true do |f| %>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.new.version_number') %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :version_number, tabindex: 1, class: "input-shorter" %>
    </div>
    <div class="col-md-6 grey">
      <%= t('version.new.version_number_comment') %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.new.date') %>
    </div>
    <div class="col-md-4">
      <%= f.date_field :date, tabindex: 2, value: Date.today, class: "input-short" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.new.author') %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :author, tabindex: 3, class: "input-shorter" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.new.checker') %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :checker, tabindex: 4, class: "input-shorter" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('version.new.comment') %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :comments, tabindex: 5 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <%= f.submit t('version.submit'), class: "btn", tabindex: 6 %>
      <%= link_to t('version.cancel'), versions_path, class: "btn" %>
    </div>
  </div>
  
<% end %>
