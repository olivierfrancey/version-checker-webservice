

<%= form_with(model: @user, local: true) do |f| %>

  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <h1><%= t('user.new.title') %></h1>
    </div>
  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('user.new.first_name') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name, :tabindex => 1 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('user.new.last_name') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name, :tabindex => 2 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('user.new.email') %> * 
    </div>
    <div class="col-md-3">
      <%= f.text_field :email, :tabindex => 3 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('user.new.password') %> * 
    </div>
    <div class="col-md-3">
      <%= f.password_field :password, :tabindex => 4 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('user.new.password_confirmation') %> * 
    </div>
    <div class="col-md-3">
      <%= f.password_field :password_confirmation, :tabindex => 4 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('user.new.company') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :company, :tabindex => 5 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-2 col-md-offset-1">
      <%= t('user.new.discipline') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :discipline, :tabindex => 6 %>
    </div>

  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= f.submit t('user.submit'), :tabindex => 7 %> 
    </div>
  </div>
<% end %>
