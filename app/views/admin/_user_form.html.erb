<%= form_with(model: user, local: true) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-2">ID</div>
    <div class="col-md-4"><%= user.id %></div>
  </div>

  <div class="row">
    <div class="col-md-2">Created at</div>
    <div class="col-md-4"><%= user.created_at %></div>
  </div>

  <div class="row">
    <div class="col-md-2">Last updated at</div>
    <div class="col-md-4"><%= user.updated_at %></div>
  </div>

  <div class="row">
    <div class="col-md-2">First name</div>
    <div class="col-md-4">
      <%= f.text_field :first_name, tabindex: 1 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">Last name</div>
    <div class="col-md-4">
      <%= f.text_field :last_name, tabindex: 2 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">Email</div>
    <div class="col-md-4">
      <%= f.text_field :email, tabindex: 3 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">Password</div>
    <div class="col-md-4">
      <%= f.text_field :password, tabindex: 4 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">Phone</div>
    <div class="col-md-4">
      <%= f.text_field :phone, tabindex: 6 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">Company</div>
    <div class="col-md-4">
      <%= f.text_field :company, tabindex: 7 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">Discipline</div>
    <div class="col-md-4">
      <%= f.text_field :discipline, tabindex: 8 %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">Super admin?</div>
    <div class="col-md-4">
      <%= f.check_box :super_admin %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <%= f.submit t('user.submit'), tabindex: 9 %>
      <%= link_to t('user.cancel'), :back, class: "btn" %>
    </div>
  </div>
<% end %>
