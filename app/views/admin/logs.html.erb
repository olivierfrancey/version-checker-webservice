<h1>Logs</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Time</th> 
      <th>Type</th>
      <th>Action</th>
      <th>User</th>
      <th>Values</th>
      <th>IP</th>  
    </tr>
  </thead>

  <tbody>
  <% @logs.each do |log| %>
    <tr>
      <td><%= log.id %></td>
      <td><%= log.created_at %></td>
      <td><%= log.auditable_type %></td>
      <td><%= log.action %></td>
      <td>
          <% if log.user %>
          <%= "#{log.user.first_name} #{log.user.last_name} : #{log.user.email}" %>
          <% end %>
      </td>
      <td><%= link_to "Detail", versions_path, class: "btn super-sharp" %></td>
      <td><%= log.remote_address %></td>
    </tr>
  <% end %>
  </tbody>

</table>