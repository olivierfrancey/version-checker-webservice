
<%= form_with(model: @document, local: true) do |f| %>

  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <h1><%= t('document.edit.title') %></h1>
    </div>
  </div>
  <div class="row">

    <div class="col-md-1 col-md-offset-1">
      <%= t('document.new.identifier') %> *
    </div>
    <div class="col-md-3">
      <%= f.text_field :identifier, :tabindex => 1 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-1 col-md-offset-1">
      <%= t('document.new.name') %> *
    </div>
    <div class="col-md-3">
      <%= f.text_field :title, :tabindex => 2 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-1 col-md-offset-1">
      <%= t('document.new.sub_title') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :sub_title, :tabindex => 3 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-1 col-md-offset-1">
      <%= t('document.new.doc_type') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :doc_type, :tabindex => 4 %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-1 col-md-offset-1">
      <%= t('document.new.size') %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :size, :tabindex => 5 %>
    </div>

  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <br>
      <%= f.submit t('document.edit.submit'), :tabindex => 7 %> 
      <%= button_to t('document.back'), documents_path %>
      <%= link_to t('document.delete'), @document, method: :delete, data: { confirm: t('document.delete_confirmation') }, class: "btn danger" %>
    </div>
  </div>
<% end %>

