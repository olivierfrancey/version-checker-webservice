
<div class="page">
  <div class="tile center login">
    <%= form_with url: session_path do |f| %>
      <div class="row">
        <div class="col-md-9 ">
          <h1><%= t('session.title') %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <%= t('session.email') %>
        </div>
        <div class="col-md-9">
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <%= t('session.password') %>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 col-md-offset-3">
          <%= f.submit t('session.submit') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
