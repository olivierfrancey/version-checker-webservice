<h1>Qr Code Positions</h1>

<%= link_to 'New Qr Code Position', new_qr_code_position_path, class: "btn" %>
<%= link_to 'Back to documents', documents_path, class: "btn" %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th class="text-center"><%= t('qrcode.index.page') %></th>
      <th class="text-center"><%= t('qrcode.index.x') %></th>
      <th class="text-center"><%= t('qrcode.index.y') %></th>
      <th class="text-center"><%= t('qrcode.index.size') %></th>
    </tr>
  </thead>

  <tbody>
    <% @qr_code_positions.each do |qr_code_position| %>
      <tr>
        <td>
          <div class="dropdown">
            <a href="#" class="dropdown-toggle" type="button" data-toggle="dropdown">
            <span class="glyphicon glyphicon-chevron-down"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Edit', edit_qr_code_position_path(qr_code_position) %></li>
              <li><%= link_to 'Destroy', qr_code_position, method: :delete, data: { confirm: 'Are you sure?' }, class: "danger" %></li>
            </ul>
          </div>
        </td>
        <td><%= qr_code_position.name %></td>
        <td class="text-center"><%= qr_code_position.page %></td>
        <td class="text-center"><%= qr_code_position.x %> mm</td>
        <td class="text-center"><%= qr_code_position.y %> mm</td>
        <td class="text-center"><%= qr_code_position.size %> mm</td>
        <td>
        <% if qr_code_position.documents_count <= 0 %>
          <%= t('qrcode.index.not_used') %>
        <% else %>
          <%= pluralize(qr_code_position.documents_count, t('qrcode.index.document_used'), t('qrcode.index.documents_used')) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

