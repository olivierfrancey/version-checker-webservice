<nav class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
  <%= link_to "version checker", projects_path, class: "navbar-brand" %>

  <ul class="nav navbar-nav navbar-right">
    <% if @projects.any? %>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= current_project ? "#{current_project.identifier} : #{current_project.name}" : t('navbar.projects') %> <span class="caret"></span>
      </a>
      <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
        
          <% @projects.each do |project| %>
            <li><%= link_to "#{project.identifier} : #{project.name}",  :controller => :projects, :action => :move_to_document, :id => project.id %></li>
          <% end %>
          <li class="divider"></li>
          <li><%= link_to t('navbar.my_projects'), projects_path %></li>
          <li><%= link_to t('navbar.new_project'), new_project_path %></li> 
      </ul>
    </li>
    <% end %>

    <li class="nav-menu-separator"></li>
    <li><%= link_to "EN", url_for(:locale => 'en') %></li>
    <li><%= link_to "FR", url_for(:locale => 'fr') %></li>
    <li class="nav-menu-separator"></li>
        <% if logged_in? %>
          <% if current_user.first_name? || current_user.last_name? %>
            <li><%= link_to "#{current_user.first_name} #{current_user.last_name}", edit_user_path(current_user.id) %></li>
          <% else %>
            <li><%= link_to t('navbar.connection'), edit_user_path(current_user.id) %></li>
          <% end %>
          <li class="nav-menu-separator"></li>
          <li class="last-item">
            <%= link_to session_path, method: :delete do %>
              <%= t('navbar.logout') %> <span class="glyphicon glyphicon-log-out"></span>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_path do %>
                <span class="glyphicon glyphicon-play-circle"></span><%= t('navbar.signup') %>
            <% end %>
          </li>
          <li class="last-item">
            <%= link_to new_session_path do %>
              <span class="glyphicon glyphicon-log-in"></span><%= t('navbar.login') %> 
            <% end %>
          </li>
        <% end %>
  </ul>
</div>
</nav>