<h1><%= t('access.edit.title') %></h1>

<%= form_with(model: @access, local: true) do |f| %>
  <% if @access.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@access.errors.count, "error") %> prohibited this access from being saved:</h2>

      <ul>
      <% @access.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-2">
      <%= t('access.new.user') %> *
    </div>
    <div class="col-md-4">
      <%= @access.user.email %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('access.new.role') %> *
    </div>
    <div class="col-md-4">
      <%= f.select(:role, options_for_select(@roles, @access.role)) %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <%= f.submit t('access.submit'), class: "btn", tabindex: 3 %>
      <%= link_to t('access.cancel'), accesses_path, class: "btn" %>
    </div>
  </div>

<% end %>

  
