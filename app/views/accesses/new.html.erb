<h1><%= t('access.new.title') %></h1>

<%= form_with model: @access, local: true do |f| %>
 
  <div class="row">
    <div class="col-md-2">
      <%= t('access.new.user') %> *
    </div>
    <div class="col-md-3">
      <%= f.text_field :email, tabindex: 1 %>
    </div>

    <div class="new-access-warning">
      <span class="grey">
        <%= t('access.new.warning') %>
      </span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= t('access.new.role') %> *
    </div>
    <div class="col-md-4">
      <%= f.select :role, options_for_select(@roles, 'basicUser') %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <%= f.submit t('access.submit'), class: "btn", tabindex: 3 %>
      <%= link_to t('access.cancel'), projects_path, class: "btn" %>
    </div>
  </div>

<% end %>
